<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gymbokning" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/gym.jpg" Stretch="Fill"/>
        </Grid.Background>

        <Border Background="#FF1B311C" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100" Margin="0,0,0,5" Padding="10,0,10,0">
            <Grid>
                <TextBlock FontSize="24" FontFamily="Candara Light" Foreground="White" Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">LYFTSPRINGSTRETCHOSV</TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,57,0,0">
                    <Button Content="Mina pass" Click="ShowBookings_Button" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="552,57,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="237">
                    <TextBox Width="150" VerticalAlignment="Center" Height="25" />
                    <Button Content="Sök" Click="Search_Button" Width="50" VerticalAlignment="Center" BorderThickness="0" />
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Margin="10,110,10,10">
            <!-- ListView för tillgängliga pass -->
        <ListView x:Name="AvailableSessionsList" ItemsSource="{Binding AvailableSessions}" Opacity="0.7">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Passnamn" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Starttid" DisplayMemberBinding="{Binding TimeOfDay}" Width="150"/>
                    <GridViewColumn Header="Längd (min)" DisplayMemberBinding="{Binding Minutes}" Width="150"/>
                    <GridViewColumn Header="Boka" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Boka" Click="Book_Button" Tag="{Binding}" Width="75"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Bokade pass -->
        <ListView x:Name="BookedSessionsList" ItemsSource="{Binding BookedSessions}" Opacity="0.7" Visibility="Collapsed">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Passnamn" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Starttid" DisplayMemberBinding="{Binding TimeOfDay}" Width="150"/>
                    <GridViewColumn Header="Längd (min)" DisplayMemberBinding="{Binding Minutes}" Width="150"/>
                    <GridViewColumn Header="Avboka" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Avboka" Click="Cancel_Button" Tag="{Binding}" Width="75"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
    </Grid>
</Window>

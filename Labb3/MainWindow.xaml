<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3"
        mc:Ignorable="d"
        Title="Labb 3" Height="450" Width="800">
    <Grid>
        <Border  Background="#FF1B311C"  HorizontalAlignment="Stretch" VerticalAlignment="Top"   Height="100" Margin="0,0,0,5" >
            <Grid>
                <TextBlock FontSize="24" FontFamily="Candara Light" Foreground="White" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">LYFTSPRINGSTRETCHOSV</TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,50,0,0">
                    <Button Content="Hem" Click="Home_Button" Height="25" Width="110" FontFamily="Calibri Light" FontSize="14" Cursor="Hand" Background="#FFBECCB9"  Margin="10"/>
                    <Button Content="Boka pass" Click="Book_Button" Height="25" Width="110" FontFamily="Calibri Light" FontSize="14" Cursor="Hand" Background="#FFBECCB9"  Margin="10"/>
                    <Button Content="Avboka pass" Click="Cancel_Button" Height="25" Width="110" FontFamily="Calibri Light" FontSize="14" Cursor="Hand" Background="#FFBECCB9"  Margin="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="541,62,0,0" Width="272" VerticalAlignment="Top">
                    <TextBox Width="150" VerticalAlignment="Center" Height="25" />
                    <Button Content="Search" Click="Search_Button" Height="25" FontFamily="Calibri Light" FontSize="14" Cursor="Hand" Background="#FFBECCB9" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="10,110,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <ListBox Grid.Row="1" Margin="0,0,0,10"/>
        </Grid>
    </Grid>
</Window>